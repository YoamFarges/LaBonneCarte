{
  "name": "labonnecarte",
  "displayName": "Labonnecarte",
  "version": "0.0.1",
  "description": "Affiche les r√©sultats de vos recherches leboncoin sur une carte.",
  "author": "Yoam Farges <yoam.farges@gmail.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.2",
    "leaflet": "^1.9.4",
    "plasmo": "0.88.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/leaflet": "^1.9.12",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "scripting"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/*.png",
          "assets/*.jpg"
        ],
        "matches": [
          "*://*.leboncoin.fr/*",
          "*://*.piruzap.com/*",
          "*://*.plasmo.com/*"
        ]
      }
    ]
  }
}
