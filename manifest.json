{
  "manifest_version": 2,

  "name": "La Bonne Carte",
  "short_name": "LaBonneCarte",
  "description": "Cette extension vous permet d'afficher les r√©sultats d'une recherche leboncoin directement sur une carte Google.",
  "version": "0.3.0",

  "icons" : {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },

    "permissions": [
        "https://api.mapbox.com/*"
    ],

    "content_security_policy": "script-src 'self' https://api.mapbox.com ; object-src 'self'",

    "web_accessible_resources": [
        "lib/*",
        "foreground/mapviewer/*",
        "foreground/mapcontainer/html/*"
    ],

    "background": {
        "scripts": [
        "lib/jquery-2.2.3.min.js",

        "utils/logger.js",

        "models/geocode.js",

        "interface/enums/message_keys.js",
        "interface/content_interface.js",

        "background/geocodecache.js",
        "background/background.js"
    ]},

    "content_scripts" : [{
        "matches" : ["*://*.leboncoin.fr/*"],
        "js" : [
            "lib/jquery-2.2.3.min.js",

            "utils/logger.js",

            "models/item.js",

            "interface/enums/message_keys.js",
            "interface/background_interface.js",

            "foreground/maincontent/js/webpageparser.js",
            "foreground/mapcontainer/js/mapcontainermanager.js",

            "foreground/maincontent/js/main.js"
        ],
        "css" : [
            "foreground/mapcontainer/css/mapcontainer.css"
        ]
    }]

}
